rules_version = '2';


service firebase.storage {
  match /b/{bucket}/o {
    // 회원가입 시 임시 파일 업로드 (인증 전)
    // temp_ 프리픽스를 사용한 경로에 대해 누구나 업로드 가능 (회원가입용)
    match /users/{userId}/{allPaths=**} {
      // temp_로 시작하는 userId는 회원가입 시 임시 업로드 허용
      allow write: if userId.matches('temp_.*');
      // 인증된 사용자는 자신의 폴더에만 쓰기 가능
      allow write: if request.auth != null && request.auth.uid == userId;
      // 읽기는 모두 허용 (사업자등록증 확인용)
      allow read: if true;
    }
    
    // 서비스 관련 파일들 (PDF, 이미지 등)
    match /services/{userId}/{allPaths=**} {
      allow read: if true; // 모든 사용자가 읽기 가능
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 프로필 이미지
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 기타 파일들
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
